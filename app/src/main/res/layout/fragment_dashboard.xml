<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.DashboardFragment">

    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card_surface"
            app:cardCornerRadius="25dp">
            <ImageView
                android:id="@+id/userDp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/user"
                app:tint="@color/icon_active" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/goodMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning"
                android:textColor="@color/text_secondary"
                android:textStyle="normal"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gopal Poddar"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/dailyHistoryLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileSection"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/congratulation"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/todayGoalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Daily Water Goal"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="40dp"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileSection"/>
    <TextView
        android:id="@+id/todayGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink 12 Glass"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayGoalTxt"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProgress"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cardCornerRadius="85dp"
        android:layout_marginTop="30dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/card_surface"
        android:outlineSpotShadowColor="@color/accent"
        android:outlineAmbientShadowColor="@color/accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayGoal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/persentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%"
                android:textColor="@color/primary_color"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/remainingGlass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Glass more"
                android:textStyle="normal"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/persentProgress"
                app:layout_constraintEnd_toEndOf="@+id/persentProgress"
                app:layout_constraintStart_toStartOf="@+id/persentProgress"/>
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cpb_background_progressbar_color="@color/card_surface"
                app:cpb_background_progressbar_width="10dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="@color/accent"
                app:cpb_progressbar_width="10dp"
                app:cpb_round_border="true"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        android:layout_marginTop="25dp"
        app:tint="@color/accent"
        app:layout_constraintTop_toBottomOf="@+id/cardProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/confirmationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap here if you just drank a glass of water"
        android:textColor="@color/text_primary"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dailyHistoryLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmationTxt"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/todayDrinkTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Today's Drinking Timeline"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/last5Rcv"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/todayDrinkTxt"/>

        <TextView
            android:id="@+id/noDataAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No water tracked today"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/todayDrinkTxt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>